<style></style>

<div class="col-lg-12 d-flex align-items-stretch">
  <div class="card w-100">
    <div class="card-body p-4">
      <h5 class="card-title fw-semibold mb-4">درباره من</h5>

      <form>
        <div class="row g-3">
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label for="fullName" class="form-label">نام کامل</label>
                <input type="text" class="form-control" id="fullName" placeholder="نام کامل" tabindex="1" />
              </div>
              <div class="mb-3">
                <label for="phoneNumber" class="form-label">شماره تماس</label>
                <input
                  type="tel"
                  class="form-control"
                  id="phoneNumber"
                  placeholder="شماره تماس"
                  maxlength="11"
                  tabindex="3"
                />
              </div>
              <div class="mb-3">
                <label for="telegram" class="form-label">تلگرام</label>
                <input type="text" class="form-control" id="telegram" placeholder="آیدی تلگرام بدون @" tabindex="5" />
              </div>
            </div>

            <div class="col-md-6">
              <div class="mb-3">
                <label for="summary" class="form-label">خلاصه</label>
                <input type="text" class="form-control" id="summary" placeholder="خلاصه‌ای کوتاه" tabindex="2" />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">ایمیل</label>
                <input type="text" class="form-control" id="email" placeholder="ایمیل" tabindex="4" />
              </div>
              <div class="mb-3">
                <label for="instagram" class="form-label">اینستاگرام</label>
                <input type="text" class="form-control" id="instagram" placeholder="آیدی اینستاگرام" tabindex="6" />
              </div>
            </div>
          </div>

          <div class="mb-3">
            <label for="bio" class="form-label">بیو</label>
            <div id="editor-container">
              <textarea
                class="form-control"
                name="bio"
                id="bio"
                placeholder="بیو"
                rows="6"
                cols="50"
                style="display: none"
              ></textarea>
              <!-- Loader -->
              <div id="loader" style="text-align: center; margin-top: 20px">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="50"
                  height="50"
                  viewBox="0 0 100 100"
                  preserveAspectRatio="xMidYMid"
                >
                  <circle
                    cx="50"
                    cy="50"
                    r="32"
                    stroke-width="8"
                    stroke="#1d3f72"
                    stroke-dasharray="50.26548245743669 50.26548245743669"
                    fill="none"
                    stroke-linecap="round"
                  >
                    <animateTransform
                      attributeName="transform"
                      type="rotate"
                      repeatCount="indefinite"
                      dur="1s"
                      values="0 50 50;360 50 50"
                      keyTimes="0;1"
                    />
                  </circle>
                </svg>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-4">
              <div class="container">
                <div class="profile-card mx-auto">
                  <div class="text-center mb-3">
                    <img
                      id="avatarImage"
                      src="/assets/images/no-image.jpg"
                      alt="Profile Image"
                      class="profile-image img-thumbnail"
                      style="width: 150px; height: 150px"
                    />
                    <button
                      type="button"
                      class="btn btn-danger w-60 m-auto mt-2"
                      id="avatarImageBtn"
                      style="display: none"
                    >
                      حذف تصویر
                    </button>
                  </div>
                  <label for="avatarURL" class="form-label">تصویر پروفایل</label>
                  <div class="custom-file-upload text-center">
                    <label for="avatarURL" class="btn btn-primary">انتخاب فایل</label>
                    <br />
                    <span id="file-chosen1">فایلی انتخاب نشده</span>
                    <input
                      class="form-control"
                      type="file"
                      accept=".jpg, .png, .jpeg"
                      id="avatarURL"
                      style="display: none"
                    />
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-6 mb-4">
              <div class="container">
                <div class="profile-card mx-auto">
                  <div class="text-center mb-3">
                    <img
                      id="mainImage"
                      src="/assets/images/no-image.jpg"
                      alt="Background Image"
                      class="profile-image img-thumbnail"
                      style="width: 150px; height: 150px"
                    />
                    <!-- اضافه کردن دکمه حذف با آی‌دی resetImageBtn2 -->
                    <button
                      type="button"
                      class="btn btn-danger w-60 m-auto mt-2"
                      id="mainImageBtn"
                      style="display: none"
                    >
                      حذف تصویر
                    </button>
                  </div>
                  <label for="mainCover" class="form-label">تصویر زمینه</label>
                  <div class="custom-file-upload text-center">
                    <label for="mainCover" class="btn btn-primary">انتخاب فایل</label>
                    <br />
                    <span id="file-chosen2">فایلی انتخاب نشده</span>
                    <input
                      class="form-control"
                      type="file"
                      accept=".jpg, .png, .jpeg"
                      id="mainCover"
                      style="display: none"
                    />
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-2 text-md-end">
              <button type="submit" id="submit-ownerInfos" class="btn btn-primary w-100 w-md-auto">ثبت تغییرات</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
