<div class="col-lg-12 d-flex align-items-stretch">
  <div class="card w-100">
    <div class="card-body p-4">
      <h5 class="card-title fw-semibold mb-4">درباره من</h5>

      <form>
        <div class="row g-3">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="fullName" class="form-label">نام کامل</label>
              <input type="text" class="form-control" id="fullName" placeholder="نام کامل" />
            </div>
            <div class="mb-3">
              <label for="phoneNumber" class="form-label">شماره تماس</label>
              <input type="tel" class="form-control" id="phoneNumber" placeholder="شماره تماس" />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">ایمیل</label>
              <input type="email" class="form-control" id="email" placeholder="ایمیل" />
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="bio" class="form-label">بیو</label>
              <input type="text" class="form-control" id="bio" placeholder="بیو" />
            </div>
            <div class="mb-3">
              <label for="socialLinks" class="form-label">سوشال مدیا</label>
              <input type="url" class="form-control" id="socialLinks" placeholder="لینک شبکه‌های اجتماعی" />
            </div>
            <div class="mb-3">
              <label for="summary" class="form-label">خلاصه</label>
              <input type="text" class="form-control" id="summary" placeholder="خلاصه‌ای کوتاه" />
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 mb-4">
              <div class="container">
                <div class="profile-card mx-auto">
                  <div class="text-center mb-3">
                    <img
                      id="profileImage1"
                      src="/assets/images/no-image.jpg"
                      alt="Profile Image"
                      class="profile-image img-thumbnail"
                      style="width: 150px; height: 150px"
                    />
                    <button
                      type="button"
                      class="btn btn-danger w-60 m-auto mt-2"
                      onclick="resetImage('profileImage1', '/assets/images/no-image.jpg')"
                    >
                      حذف تصویر
                    </button>
                  </div>
                  <label for="avatarURL" class="form-label">تصویر پروفایل</label>
                  <div class="custom-file-upload text-center">
                    <label for="avatarURL" class="btn btn-primary">انتخاب فایل</label>
                    <br />
                    <span id="file-chosen1">فایلی انتخاب نشده</span>
                    <input class="form-control" type="file" accept=".jpg, .png, .jpeg" id="avatarURL" style="display: none" />
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-6 mb-4">
              <div class="container">
                <div class="profile-card mx-auto">
                  <div class="text-center mb-3">
                    <img
                      id="profileImage2"
                      src="/assets/images/no-image.jpg"
                      alt="Background Image"
                      class="profile-image img-thumbnail"
                      style="width: 150px; height: 150px"
                    />
                    <button
                      type="button"
                      class="btn btn-danger w-60 m-auto mt-2"
                      onclick="resetImage('profileImage2', '/assets/images/no-image.jpg')"
                    >
                      حذف تصویر
                    </button>
                  </div>
                  <label for="mainCover" class="form-label">تصویر زمینه</label>
                  <div class="custom-file-upload text-center">
                    <label for="mainCover" class="btn btn-primary">انتخاب فایل</label>
                    <br />
                    <span id="file-chosen2">فایلی انتخاب نشده</span>
                    <input class="form-control" type="file" accept=".jpg, .png, .jpeg" id="mainCover" style="display: none" />
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-2 text-md-end">
              <button type="submit" class="btn btn-primary w-100 w-md-auto">ثبت تغییرات</button>
            </div>
          </div>

          <script>
            document.getElementById("avatarURL").addEventListener("change", function (event) {
              const file = event.target.files[0];
              const fileChosen = document.getElementById("file-chosen1");

              if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                  document.getElementById("profileImage1").src = e.target.result;
                };
                reader.readAsDataURL(file);

                fileChosen.textContent = file.name;
              } else {
                fileChosen.textContent = "فایلی انتخاب نشده";
              }
            });

            document.getElementById("mainCover").addEventListener("change", function (event) {
              const file = event.target.files[0];
              const fileChosen = document.getElementById("file-chosen2");

              if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                  document.getElementById("profileImage2").src = e.target.result;
                };
                reader.readAsDataURL(file);

                fileChosen.textContent = file.name;
              } else {
                fileChosen.textContent = "فایلی انتخاب نشده";
              }
            });

            function resetImage(imageId, defaultSrc) {
              document.getElementById(imageId).src = defaultSrc;
              const fileInputId = imageId === "profileImage1" ? "avatarURL" : "mainCover";
              document.getElementById(fileInputId).value = "";
              const fileChosenId = imageId === "profileImage1" ? "file-chosen1" : "file-chosen2";
              document.getElementById(fileChosenId).textContent = "فایلی انتخاب نشده";
            }
          </script>

          <style></style>

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        </div>
      </form>
    </div>
  </div>
</div>
