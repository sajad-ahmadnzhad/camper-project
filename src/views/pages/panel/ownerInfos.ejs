<style>
  .btn-danger {
    background-color: #ff6f61;
    border: 2px solid #ff6f61;
    border-radius: 8px;
    padding: 8px 16px;
    color: white;
    font-weight: bold;
    transition: all 0.3s ease;
    margin-right: 10px;
    margin-left: 10px;
  }

  .btn-danger:hover {
    background-color: #ff4433;
    border-color: #ff4433;
    box-shadow: 0 4px 12px rgba(255, 111, 97, 0.3);
    transform: scale(1.05);
  }

  .btn-danger:focus {
    outline: none;
  }

  /* استایل جدید برای لینک‌های شبکه اجتماعی */
  .social-link-group {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 10px;
    margin-bottom: 10px;
  }

  .social-link {
    flex-grow: 1;
    border-radius: 4px;
    padding: 8px;
    border: 1px solid #ddd;
  }

  .remove-social-link {
    background-color: #dc3545;
    border: none;
    color: white;
    padding: 8px 12px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .remove-social-link:hover {
    background-color: #c82333;
  }
</style>

<div class="col-lg-12 d-flex align-items-stretch">
  <div class="card w-100">
    <div class="card-body p-4">
      <h5 class="card-title fw-semibold mb-4">درباره من</h5>

      <form>
        <div class="row g-3">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="fullName" class="form-label">نام کامل</label>
              <input type="text" class="form-control" id="fullName" placeholder="نام کامل" />
            </div>
            <div class="mb-3">
              <label for="phoneNumber" class="form-label">شماره تماس</label>
              <input type="tel" class="form-control" id="phoneNumber" placeholder="شماره تماس" maxlength="11" />
            </div>
            <div class="mb-3">
              <label class="form-label">سوشال مدیا</label>
              <div id="socialLinksContainer">
                <div class="social-link-group">
                  <input type="url" class="form-control social-link" placeholder="لینک شبکه اجتماعی" />
                  <button type="button" class="btn remove-social-link">حذف</button>
                </div>
              </div>
              <button type="button" class="btn btn-primary" id="addSocialLink">اضافه کردن لینک</button>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="bio" class="form-label">بیو</label>
              <input type="text" class="form-control" id="bio" placeholder="بیو" />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">ایمیل</label>
              <input type="email" class="form-control" id="email" placeholder="ایمیل" />
            </div>

            <div class="mb-3">
              <label for="summary" class="form-label">خلاصه</label>
              <input type="text" class="form-control" id="summary" placeholder="خلاصه‌ای کوتاه" />
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-4">
              <div class="container">
                <div class="profile-card mx-auto">
                  <div class="text-center mb-3">
                    <img
                      id="avatarImage"
                      src="/assets/images/no-image.jpg"
                      alt="Profile Image"
                      class="profile-image img-thumbnail"
                      style="width: 150px; height: 150px"
                    />
                    <button type="button" class="btn btn-danger w-60 m-auto mt-2" id="avatarImageBtn" style="display: none">
                      حذف تصویر
                    </button>
                  </div>
                  <label for="avatarURL" class="form-label">تصویر پروفایل</label>
                  <div class="custom-file-upload text-center">
                    <label for="avatarURL" class="btn btn-primary">انتخاب فایل</label>
                    <br />
                    <span id="file-chosen1">فایلی انتخاب نشده</span>
                    <input class="form-control" type="file" accept=".jpg, .png, .jpeg" id="avatarURL" style="display: none" />
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-6 mb-4">
              <div class="container">
                <div class="profile-card mx-auto">
                  <div class="text-center mb-3">
                    <img
                      id="mainImage"
                      src="/assets/images/no-image.jpg"
                      alt="Background Image"
                      class="profile-image img-thumbnail"
                      style="width: 150px; height: 150px"
                    />
                    <!-- اضافه کردن دکمه حذف با آی‌دی resetImageBtn2 -->
                    <button type="button" class="btn btn-danger w-60 m-auto mt-2" id="mainImageBtn" style="display: none">حذف تصویر</button>
                  </div>
                  <label for="mainCover" class="form-label">تصویر زمینه</label>
                  <div class="custom-file-upload text-center">
                    <label for="mainCover" class="btn btn-primary">انتخاب فایل</label>
                    <br />
                    <span id="file-chosen2">فایلی انتخاب نشده</span>
                    <input class="form-control" type="file" accept=".jpg, .png, .jpeg" id="mainCover" style="display: none" />
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-2 text-md-end">
              <button type="submit" id="submit-ownerInfos" class="btn btn-primary w-100 w-md-auto">ثبت تغییرات</button>
            </div>
          </div>

          <script src="/panel/pages/ownerInfos.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        </div>
      </form>
    </div>
  </div>
</div>
